#!/bin/bash

fg=ACB0D0
wrong=db4b4b
highlight=565f89
date=7aa2f7
verify=9ece6a

slowfade () {
    dis=$(echo -n "$DISPLAY" | tr -c '[:alnum:]' _)
    ifc='com.github.chjj.compton'
    obj='/com/github/chjj/compton'
    if [[ "$1" == "start" ]]; then
        dbus-send --dest=$ifc.$dis \
            $obj $ifc.opts_set string:fade_in_step double:0.02
        dbus-send --dest=$ifc.$dis \
            $obj $ifc.opts_set string:fade_out_step double:0.02
    else
        dbus-send --dest=$ifc.$dis \
            $obj $ifc.opts_set string:fade_in_step double:0.1
        dbus-send --dest=$ifc.$dis \
            $obj $ifc.opts_set string:fade_out_step double:0.1
    fi
}

pkill -u "$USER" -USR1 dunst
slowfade start
i3lock -n --force-clock -i ~/.wallpapers/tokyo-night03.png -e --indicator --radius=20 --ring-width=40 --inside-color=$fg --ring-color=$fg --insidever-color=$verify --ringver-color=$verify --insidewrong-color=$wrong --ringwrong-color=$wrong --line-uses-inside --keyhl-color=$verify --separator-color=$verify --bshl-color=$verify --time-str="%H:%M" --time-size=140 --date-str="%a, %d %b" --date-size=45 --verif-text="Verifying Password..." --wrong-text="Wrong Password!" --noinput-text="" --greeter-text="Type the password to Unlock" --ind-pos="960:910" --time-font="Sofia Pro:style=Bold" --date-font="Sofia Pro" --verif-font="Sofia Pro" --greeter-font="Sofia Pro" --wrong-font="Sofia Pro" --verif-size=23 --greeter-size=23 --wrong-size=23 --time-pos="960:820" --date-pos="960:450" --greeter-pos="960:1000" --wrong-pos="960:1050" --verif-pos="960:1050" --date-color=$date --time-color=$date --greeter-color=$fg --wrong-color=$wrong --verif-color=$verify --verif-pos="960:1050" --pointer=default --refresh-rate=0 --pass-media-keys --pass-volume-keys

slowfade end
